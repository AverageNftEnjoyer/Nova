{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "outDir": ".tmp-gmail-tests",
    "rootDir": ".",
    "noEmit": false
  },
  "include": [
    "lib/integrations/gmail/**/*.ts",
    "lib/integrations/agent-runtime-sync.ts",
    "lib/integrations/server-store.ts",
    "lib/security/encryption.ts",
    "lib/supabase/server.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
