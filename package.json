{
  "name": "novaos",
  "version": "0.10.0",
  "description": "NovaOS â€” AI agent desktop OS. Unified launcher for the agent backend and Next.js HUD.",
  "type": "module",
  "scripts": {
    "start": "node nova.js",
    "dev": "NOVA_HUD_MODE=dev node nova.js",
    "install:all": "npm install --prefix hud",
    "build:agent-core": "npx tsc -p tsconfig.json",
    "smoke": "node scripts/smoke/runtime-smoke.mjs",
    "smoke:src-providers": "npm run build:agent-core && node scripts/smoke/src-provider-smoke.mjs",
    "smoke:src-session": "npm run build:agent-core && node scripts/smoke/src-session-parity.mjs",
    "smoke:src-persona": "npm run build:agent-core && node scripts/smoke/src-persona-context-smoke.mjs",
    "smoke:src-tools": "npm run build:agent-core && node scripts/smoke/src-tool-loop-smoke.mjs",
    "smoke:src-memory": "npm run build:agent-core && node scripts/smoke/src-memory-convergence-smoke.mjs",
    "smoke:src-transport": "npm run build:agent-core && node scripts/smoke/src-transport-stability-smoke.mjs",
    "smoke:src-shell": "node scripts/smoke/src-shell-parity-smoke.mjs",
    "smoke:src-relocation": "node scripts/smoke/src-runtime-relocation-smoke.mjs",
    "verify:phase15": "node scripts/verify-phase15.mjs"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.77.0",
    "@mozilla/readability": "^0.6.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.3",
    "fish-audio": "^0.0.3",
    "jsdom": "^28.1.0",
    "openai": "^6.17.0",
    "systeminformation": "^5.30.7",
    "turndown": "^7.2.2",
    "ws": "^8.19.0"
